  <div class="overlay">
    <div class="modal-card">
        
        <header class="modal-card-head">
            <p class="modal-card-title"><k>New Horse Information</k></p>
            <button id="modBut" class="delete close-modal" aria-label="close"></button>
        </header>

        <section class="modal-card-body">
            <div class="content">
                <div class="field">
                    <label id="addTitle" class="label"></label>
                   
                    <div class="control">
                        <input id="horse-name" class="owner-input" type="name" placeholder="Name">
                    </div>
                </div>

                <div class="field">
                    
                    <div class="control">
                        <input id="horse-age" class="owner-input" type="name" placeholder="Age">
                    </div>
                </div>

                <div class="field">
                    
                    <div class="control">
                        <input id="horse-breed" class="owner-input" type="name" placeholder="Breed">
                    </div>
                </div>

                <div class="field">
                   <div class="control">
                        <input id="horse-notes" class="owner-input" type="name" placeholder="Notes">
                    </div>
                </div>
            </div>
        </section>

        <footer class="modal-card-foot">
            <button id="modBut" class="button is-success add-horse" type="submit" data-id="{{ owner.id }}">Save</button>
            <button id="modBut" class="button close-modal">Cancel</button>
        </footer>
    
    </div>
</div>
