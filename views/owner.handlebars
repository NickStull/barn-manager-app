<section class = "section">
    <div class = "container"> 
        <p><a id="addbut" class = "button is-primary modal-button" data-target = "#modal">Add a Horse</a></p>
    
        <div id = "modal" class = "modal">
            <div class = "modal-background"></div>
            <div class = "modal-card">
                <header class = "modal-card-head">
                    <p class = "modal-card-title">Horse Information</p>
                    <button class = "delete" aria-label = "close"></button>
                </header>
        
                <section class = "modal-card-body">
                    <div class = "content">
                        <div class="field">
                            <label id="addTitle" class="label"></label>
                            <label class="label">Name</label>
                            <div class="control">
                                <input id="horse-name" class="input" type="name" placeholder="">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Age</label>
                            <div class="control">
                                <input id="horse-age"class="input" type="name" placeholder="">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Breed</label>
                            <div class="control">
                                <input id="horse-breed"class="input" type="name" placeholder="">
                            </div>
                        </div>

                        <div class="field">
                            <label class="label">Notes</label>
                            <div class="control">
                                <input id="horse-notes"class="input" type="name" placeholder="">
                            </div>
                        </div>
                    </div>     
                </section>

                <footer class="modal-card-foot">
                    <button class="button is-success add-horse" type="submit" data-id="{{ owner.id }}">Save</button>
                    <button id="btnClose" class="button">Cancel</button>
                </footer> 

            </div> {{!-- end modal-card --}}
        </div> {{!-- end modal --}}
    </div> {{!-- end container --}}    
</section>
      
      <script>
         $(".modal-button").click(function() {
            var target = $(this).data("target");
            $("html").addClass("is-clipped");
            $(target).addClass("is-active");
         });
         
         $(".delete").click(function() {
            $("owner.handlebars").removeClass("is-clipped");
            $(this).parent().removeClass("is-active");
         });
      </script>
<h2> {{ owner.firstName }} {{ owner.lastName }}</h2>
<div id= "ownerContainer" class="table-container">
<table class="table">
    <thead>
        <tr id=ownersLabel>
