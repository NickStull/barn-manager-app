<h1>Owner Inf0</h1>

<h2> {{ owner.firstName }} {{ owner.lastName }}</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Breed</th>
            <th>Flakes a.m.</th>
            <th>Flakes p.m.</th>
            <th>Grain Serving</th>
            <th>Last Dewormed</th>
            <th>Last Vaccination</th>
            <th>Last Coggins</th>
            <th>Last Farrier</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        {{#each owner.Horses}}
            <tr>
                <td> {{ this.name }} </td>
                <td> {{ this.age }} </td>
                <td> {{ this.breed }} </td>
                <td> {{ this.amFlakes }} </td>
                <td> {{ this.pmFlakes }} </td>
                <td> {{ this.grainServing }} </td>
                <td> {{ this.lastDewormer }} </td>
                <td> {{ this.lastVaccination }} </td>
                <td> {{ this.lastCoggins }} </td>
                <td> {{ this.lastFarrier }} </td>
                <td> {{ this.Notes }} </td>
                
            </tr>
            <tr>
                <td><button>Edit Info</button></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td><button class="setDate" data-id="{{ this.id }}" data-update="lastDewormer">Set Today</button></td>
                <td><button class="setDate" data-id="{{ this.id }}" data-update="lastVaccination">Set Today</button></td>
                <td><button class="setDate" data-id="{{ this.id }}" data-update="lastCoggins">Set Today</button></td>
                <td><button class="setDate" data-id="{{ this.id }}" data-update="lastFarrier">Set Today</button></td>
                <td></td>
            </tr>
        {{/each}}
    </tbody>    
</table>        

<h2>Add a horse</h2>
<form class="create-form">

  <div class="form-group">
    <label for="horse-name">Name:</label>
    <input type="text" id="horse-name" name="horseName"><BR>
    <label for="owner-last">Last Name:</label>
    <input type="text" id="owner-last" name="lastName">
  </div>

  <button class="add" type="submit">Add Owner</button>
</form>
</div>
