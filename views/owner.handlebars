                <td></td>
                <td></td>
                <td></td>
                <td><button class="setDate" data-id="{{ this.id }}" data-update="lastDewormer">Set Today</button></td>
                <td><button class="setDate" data-id="{{ this.id }}" data-update="lastVaccination">Set Today</button></td>
                <td><button class="setDate" data-id="{{ this.id }}" data-update="lastCoggins">Set Today</button></td>
                <td><button class="setDate" data-id="{{ this.id }}" data-update="lastFarrier">Set Today</button></td>
