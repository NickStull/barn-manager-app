</center>
<center>
<button id="new-horse-but" class="button is-primary modal-button" data-target="#modal">Add New Horse</button>
<BR>
<div id="ownerContainer">
    <table class="table">
        <BR>
        <thead>
            <tr id=ownersLabel>
                <th>Name</th>
                <th>Age</th>
                <th>Breed</th>
                <th>Flakes a.m.</th>
                <th>Flakes p.m.</th>
                <th>Grain Serving</th>
                <th>Last Dewormed</th>
                <th>Last Vaccination</th>
                <th>Last Coggins</th>
                <th>Last Farrier</th>
                <th>Notes</th>
            </tr>
        </thead>

        <tbody>
            {{#each owner.Horses}}
            <tr>
                <td> {{ this.name }} </td>
                <td> {{ this.age }} </td>
                <td> {{ this.breed }} </td>
                <td> {{ this.amFlakes }} </td>
                <td> {{ this.pmFlakes }} </td>
                <td> {{ this.grainServing }} </td>
                <td> {{ this.lastDewormer }} </td>
                <td> {{ this.lastVaccination }} </td>
                <td> {{ this.lastCoggins }} </td>
                <td> {{ this.lastFarrier }} </td>
                <td> {{ this.Notes }} </td>

            </tr>
            <tr>
                <td>
                    <button id="edithorse" class="button is-primary modal-button edit-horse-but" data-target="#modal" data-id="{{ this.id }}">Edit {{ this.name }}</button>
                    <div id="edit-horse-{{ this.id }}" class="modal edit-horse-modal">
                        <div class="modal-background"></div>
                        <div class="modal-card">
                            <header class="modal-card-head">
                                <p class="modal-card-title">Edit Info</p>
                                <button class="delete close-modal" aria-label="close"></button>
                            </header>

                            <section class="modal-card-body">
                                <div class="content">

                                    <div class="field">
                                        <label id="addTitle" class="label"></label>
                                        <label class="label">Name</label>
                                        <div class="control">
                                            <input id="edit-name" class="input" type="name" value="{{ this.name }}">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Age</label>
                                        <div class="control">
                                            <input id="edit-age" class="input" type="name" value="{{ this.age }}">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Breed</label>
                                        <div class="control">
                                            <input id="edit-breed" class="input" type="name" value="{{ this.breed }}">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Flakes a.m.</label>
                                        <div class="control">
                                            <input id="edit-flakes-am" class="input" type="name"
                                                value="{{ this.amFlakes }}">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Flakes p.m.</label>
                                        <div class="control">
                                            <input id="edit-flakes-pm" class="input" type="name"
                                                value="{{ this.pmFlakes }}">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Grain Serving</label>
                                        <div class="control">
                                            <input id="edit-grain-serving" class="input" type="name"
                                                value="{{ this.grainServing }}">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Last Dewormed</label>
                                        <div class="control">
                                            <input id="edit-dewormed" class="input" type="name"
                                                value="{{ this.lastDewormer }}">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Last Vaccination</label>
                                        <div class="control">
                                            <input id="edit-vaccination" class="input" type="name"
                                                value="{{ this.lastVaccination }}">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Last Coggins</label>
                                        <div class="control">
                                            <input id="edit-coggins" class="input" type="name"
                                                value="{{ this.lastCoggins }}">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Last Farrier</label>
                                        <div class="control">
                                            <input id="edit-farrier" class="input" type="name"
                                                value="{{ this.lastFarrier }}">
                                        </div>
                                    </div>

                                    <div class="field">
                                        <label class="label">Notes</label>
                                        <div class="control">
                                            <input id="edit-notes" class="input" type="name" value="{{ this.notes }}">
                                        </div>
                                    </div>

                                </div>
                            </section>

                            <footer class="modal-card-foot">
                                <button class="button is-success edit-horse" type="submit"
                                    data-id="{{ this.id }}">Save</button>
                                <button id="btnClose" class="button close-modal">Cancel</button>
                            </footer>

                        </div>
                    </div>
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                
                <td><button  id="settoday" class="setDate" data-id="{{ this.id }}" data-update="lastDewormer">Set to Today</button></td>
                <td><button id="settoday"  class="setDate" data-id="{{ this.id }}" data-update="lastVaccination">Set to Today</button></td>
                <td><button  id="settoday" class="setDate" data-id="{{ this.id }}" data-update="lastCoggins">Set to Today</button></td>
                <td><button  id="settoday" class="setDate" data-id="{{ this.id }}" data-update="lastFarrier">Set to Today</button></td>
                <td></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
</center>
{{!-- Add a Horse modal code --}}
<div id="new-horse-modal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Horse Information</p>
            <button class="delete close-modal" aria-label="close"></button>
        </header>

        <section class="modal-card-body">
            <div class="content">
                <div class="field">
                    <label id="addTitle" class="label"></label>
                    <label class="label">Name</label>
                    <div class="control">
                        <input id="horse-name" class="input" type="name" placeholder="">
                    </div>
                </div>

                <div class="field">
                    <label class="label">Age</label>
                    <div class="control">
                        <input id="horse-age" class="input" type="name" placeholder="">
                    </div>
                </div>

                <div class="field">
                    <label class="label">Breed</label>
                    <div class="control">
                        <input id="horse-breed" class="input" type="name" placeholder="">
                    </div>
                </div>

                <div class="field">
                    <label class="label">Notes</label>
                    <div class="control">
                        <input id="horse-notes" class="input" type="name" placeholder="">
                    </div>
                </div>
            </div>
        </section>

        <footer class="modal-card-foot">
            <button class="button is-success add-horse" type="submit" data-id="{{ owner.id }}">Save</button>
            <button id="btnClose" class="button close-modal">Cancel</button>
        </footer>

    </div>
</div>
