<div class="row">
  <div id="mainForm" class="box">
    <center>
      <BR><BR><BR>
      <div class="owner-dropdown dropdown">
        <button class="dropbtn"> Browse Current Owners</button>
        <div id="myDropdown" class="dropdown-content">
          {{#each owners}}
          <a class="select-owner" data-id="{{ this.id }}">
            {{ this.firstName}} {{ this.lastName }}
          </a>
          {{/each}}
        </div>
      </div>
<center>
      <button id="addbut" class="button is-primary modal-button new-owner-but" data-target="#modal">Add New Owner</button>
<center>
      <div id="new-owner-modal" class="modal">
        <div class="modal-background"></div>
        <div class="modal-card">
          <header class="modal-card-head">
            <p class="modal-card-title">Owner Information</p>
            <button class="delete close-modal" aria-label="close"></button>
          </header>
          <section class="modal-card-body">
            <div class="content">

              <div class="field">
                <label class="label">First Name</label>
                <div class="control">
                  <input id="ownerFirst" class="input" type="text" placeholder="first name" name="firstName">
                </div>
              </div>

              <div class="field">
                <label class="label">Last Name</label>
                <div class="control">
                  <input id="ownerLast" class="input" type="text" placeholder="last name" name="lastName">
                </div>
              </div>
              <footer class="modal-card-foot">
                <button id="modBut" class="button is-success create-form" data-id="{{ owner.id }}">Save</button>
                <button id="modBut" class="button close-modal">Cancel</button>
              </footer>
</center>
